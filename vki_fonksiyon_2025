    function Vki($boy,$kilo)
    {
        $vki = $kilo/($boy*$boy) ; //kilo bölü boyun karesi
        $vki=round($vki,2); //virgülden sonra 2 hane 
        echo "Vücut kitle indexiniz :         ";
        if ($vki<=16)
      echo $vki."ciddi derecede zayıfsın";
        else if($vki<=18.5)
      echo $vki." Zayıf";
        else if ($vki<=25)
      echo $vki."Sağlıklısın";
        else if ($vki<=35)
      echo $vki."Fazla Kilolusun";
        else if($vki<=40)
      echo $vki." Aşırı kilolusun";
        else 
      echo $vki."geçerli ayrıntıları girin";
    }
